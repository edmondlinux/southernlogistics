entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 3000

[[ports]]
localPort = 5173
externalPort = 80
exposeLocalhost = true

[workflows]

[[workflows.workflow]]
name = "App"
mode = "parallel"
author = 35089257

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Reptileglobal/backend && node server.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Reptileglobal/frontend && npm run dev"
